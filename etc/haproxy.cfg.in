global
        log 127.0.0.1 local0
        user nobody
        group nobody
        daemon
        maxconn 65535
        pidfile /var/run/haproxy.pid
        stats socket /tmp/haproxy.sock

        ca-base /opt/smartdc/cloudapi/ssl
        crt-base /opt/smartdc/cloudapi/ssl

        ssl-default-bind-ciphers EECDH+CHACHA20:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:HIGH:!MD5:!aNULL:!PSK
        ssl-default-bind-options no-sslv3
        tune.ssl.default-dh-param 2048

defaults
        mode    http
        balance leastconn
        maxconn 65535
        option  redispatch
        option  abortonclose
        option  forwardfor
        retries 1
        timeout queue   0
        timeout connect 2000
        timeout client  55000
        timeout server  120000
        errorfile 503 /opt/smartdc/cloudapi/etc/haproxy-error-503.json.http
        errorfile 504 /opt/smartdc/cloudapi/etc/haproxy-error-503.json.http
        errorfile 500 /opt/smartdc/cloudapi/etc/haproxy-error-500.json.http
        errorfile 400 /opt/smartdc/cloudapi/etc/haproxy-error-400.json.http
        errorfile 408 /opt/smartdc/cloudapi/etc/haproxy-error-408.json.http

frontend cloudapi
        bind *:443 ssl crt /opt/smartdc/cloudapi/ssl/stud.pem
        default_backend servers

backend servers
        option httpchk GET /--ping
@@CLOUDAPI_INSTANCES@@
